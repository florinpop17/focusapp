---
import ChromeIcon from "@components/icons/ChromeIcon.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
    <div
        class="mx-auto flex items-center justify-center rounded-xl px-4 py-8 text-black"
    >
        <div class="mx-auto max-w-md space-y-6">
            <div class="space-y-2 text-center">
                <h1 class="text-3xl font-bold">Sign In</h1>
                <p class="text-gray-500 dark:text-gray-400">
                    Sign in to your account using one of the options below.
                </p>
            </div>
            <form class="space-y-4" method="post" action="/api/auth/login">
                <button
                    class="flex w-full items-center justify-center gap-2 rounded-md p-2"
                    value="google"
                    name="provider"
                >
                    <ChromeIcon class="mr-2 h-5 w-5" />
                    Sign in with Google
                </button>
            </form>
        </div>
    </div>
</Layout>
